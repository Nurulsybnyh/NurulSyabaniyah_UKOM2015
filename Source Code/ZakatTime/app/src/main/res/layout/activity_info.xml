<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bckgrnd"
    tools:context="app.zakattime.nurulsybnyh.zakattime.Home$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengertian Zakat"
                    android:textColor="#99FF99"
                    android:id="@+id/pengertian"
                    android:textSize="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Zakat menurut loghat artinya suci dan subur. Menurut istilah syara' ialah : Mengeluarkan sebagian dari harta benda atas perintah Allah, sebagai shadaqah wajib kepada mereka yang telah ditetapkan menurut syarat-syarat yang telah ditentukan"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hukum Mengeluarkan Zakat"
                    android:id="@+id/hukum"
                    android:textColor="#99FF99"
                    android:textSize="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Mengeluarkan zakat hukumnya wajib bagi tiap-tiap muslim yang mempunyai harta benda menurut ketentuan yang telah ditetapkan oleh hukum Islam."
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Ayat-ayat Al-Qur'an yang mewajibkan zakat  :"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Dalam QS.Al Bayyinnah ayat 5 artinya 'Dan tiada di perintahlan mereka melainkan menyembah Allah, sambil mengikhlaskan ibadah dan taat kepada-Nya serta berlaku cenderung (tertarik) kepada ibadah itu dan mendirikan shalat dan memberikan zakat. Itulah agama yang benar'"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="QS. Al Baqarah ayat 43 artinya 'Dan dirikanlah olehmu shalat dan keluarkanlah zakat, dan tunduklah bersama-sama orang-orang yang tunduk'"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Macam-macam Zakat"
                    android:textColor="#99FF99"
                    android:id="@+id/macam"
                    android:textSize="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#99FF99"
                    android:text="1. Zakat Fitrah"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Mengeluarkan harta kekayaan berupa makanan pokok yang sudah di tentukan jumlah dan waktunya, lalu diberikan kepada yang berhak menerima dengan syarat yang sudah ditentukan"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Zakat Mal"
                    android:textColor="#99FF99"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Mengeluarkan harta kekayaan berupa harta benda yang wajib ditunaikan (dikeluarkan) hartanya setiap setahun sekali"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#99FF99"
                    android:text="Syarat-syarat wajib untuk mengeluarkan zakat  :"
                    android:textSize="25dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="1. Islam (zakat hanya diwajibkan bagi orang Islam saja"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="2. Merdeka (Hamba sahaya tidak wajib mengeluarkan zakat kecuali zakat fitrah, sedangkan tuannya wajib mengeluarkannya"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="3. Milik sepenuhnya (harta yang di zakati hendaknya milik sepenuhnya seorang yang beragama Islam dan harus merdeka"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
